extends layout
include mixins/formField
include mixins/head

block pageTitle
  +head('Post a message')

block content
  form(action='/post' method='POST' class='sm:mt-5 mt-6 flex-col max-w-lg flex')
    div(class='w-full')
      textarea#message(name='message' cols='3' row='4' class='appearance-none block w-full px-3 py-2 h-32 border border-gray-300 rounded-md placeholder-gray-400 transition duration-150 ease-in-out focus:outline-none focus:shadow-outline-blue focus:border-blue-300 sm:text-sm sm:leading-5')
    div(class='flex justify-end mt-8')
      span(class='inline-flex ml-3 rounded-md shadow-sm')
        a(href='/' type='button' class='py-2 px-4 border-gray-300 rounded-md text-sm leading-5 font-medium text-gray-700 transition duration-150 ease-in-out hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800') Back
      span(class='inline-flex ml-3 rounded-md shadow-sm')
        +button('Send')
